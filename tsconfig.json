{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": "./packages",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": false,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "dom",
      "esnext"
    ],
    "sourceMap": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "*": [
        "../@types/*"
      ]
    },
    "pretty": true,
    "skipLibCheck": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "types": ["jest"],
    "typeRoots": [
      "./@types/roots"
    ]
  },
  "include": [
    "@types/**/*.ts",
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "scripts/**/*.ts"
  ]
}
